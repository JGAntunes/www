body
  background-color: #999090

@media screen and (min-width: 1260px)
  #presentation
    margin-top: 10px
    border-top-left-radius: 10px
    border-top-right-radius: 10px

.section
  max-width: 1260px
  shadowBothSides(#ddd, 2.5px, 0px, -2.5px, 0px, 5px)

h1, h2, h3, h4, h5, h6
  font-family: Courier

.logo
  width: 60px
  height: 60px
  
.main-photo
  border-radius: 50%
  
.social-icon
  font-size: 50px
  text-decoration: none
  margin: 0.1em
  opacity: 0.9
  color: #404040
  
#presentation
  padding-top: 20px
  background-color: #F4F4F4
  border-bottom: 2px dashed #E5E5E5
  
#music
  padding-top: 20px
  background-color: white
  border-bottom: 2px dashed #E5E5E5
